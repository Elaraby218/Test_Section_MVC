@model Calc 



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Calculator</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .container {
            max-width: 400px;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        input[type="number"] {
            width: 100px;
            padding: 10px;
            margin: 5px;
        }

        select {
            padding: 10px;
            margin: 5px;
        }

        button {
            padding: 10px 20px;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

            button:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>
    <div class="container">
        <h2>Simple Calculator</h2>
        <form action="/Calculator/Do_Calc" method="post">
            <input type="number" id="a" name="a" value="@(TempData["a"]==null?0:TempData["a"])" required>
            <select asp-for="oper">
                <option value="+" selected="@(TempData["chr"] != null && TempData["chr"].ToString() == "+")">+</option>
                <option value="-" selected="@(TempData["chr"] != null && TempData["chr"].ToString() == "-")">-</option>
                <option value="*" selected="@(TempData["chr"] != null && TempData["chr"].ToString() == "*")">*</option>
            </select>
            <input type="number" id="b" name="b" value="@(TempData["b"]==null?0:TempData["b"])" required>
            <button type="submit">Calculate</button>
        </form>
    </div>
</body>
</html>
