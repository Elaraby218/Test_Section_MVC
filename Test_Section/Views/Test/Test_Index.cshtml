<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cat Sound</title>
    <style>
        /* Define a CSS class for the click effect */
        .clicked {
            transform: scale(0.9); /* Example: Slightly scale down the image */
            transition: transform 0.2s ease; /* Example: Apply a smooth transition effect */
        }
    </style>
</head>
<body>

    <!-- Image of a cat -->
    <img id="catImage" src="~/OIP.jpeg" alt="Cat Image" style="width: 1000px; height: auto; cursor: pointer;">

    <!-- Audio element for cat sound -->
    <audio id="catSound">
        <source src="~/funny-meow-110120.mp3" type="audio/mpeg">
    </audio>

    <script>
        // Get the cat image element
        var catImage = document.getElementById('catImage');

        // Get the cat sound element
        var catSound = document.getElementById('catSound');

        // Add click event listener to the cat image
        catImage.addEventListener('click', function () {
            // Add the 'clicked' class to the image
            catImage.classList.add('clicked');

            // Check if the sound is already playing, if so, stop it and reset the time
            if (!catSound.paused) {
                catSound.pause();
                catSound.currentTime = 0;
            }
            // Play the cat sound
            catSound.play();

            // After a short delay, remove the 'clicked' class
            setTimeout(function () {
                catImage.classList.remove('clicked');
            }, 200); // Adjust the delay time (in milliseconds) as needed
        });
    </script>

</body>
</html>
